# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Login controller
GET     /                                   controllers.LoginController.index()
POST    /login                              controllers.LoginController.login()

# Archive controller
GET     /archives                           controllers.ArchiveController.index()
GET     /archives/files                     controllers.ArchiveController.getFilesForArchive()
GET     /archives/picture/:identity.png     controllers.ArchiveController.getPicture(identity)
GET     /archives/moveFile/:id/:archive     controllers.ArchiveController.moveFile(id, archive)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)